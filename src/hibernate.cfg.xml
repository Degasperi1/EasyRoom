<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD
3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property
            name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property
            name="hibernate.connection.url">jdbc:postgresql://localhost:5432/easyroom</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">postgres</property>
        <mapping class="Entidade.Produto"/>
        <mapping class="Entidade.Cidade"/>
        <mapping class="Entidade.Estado"/>
        <mapping class="Entidade.Entidade"/>
        <mapping class="Entidade.PessoaFisica"/>
        <mapping class="Entidade.TipoQuarto"/>
        <mapping class="Entidade.Quarto"/>
        <mapping class="Entidade.Usuario"/>
        <mapping class="Entidade.AuditoriaDados"/>
        <mapping class="Entidade.Reserva"/>
        <mapping class="Entidade.ReservaQuarto"/>
    </session-factory>
</hibernate-configuration>